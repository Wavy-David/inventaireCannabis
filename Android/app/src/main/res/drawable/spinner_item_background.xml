<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bonne santé -->
    <item android:state_selected="true" android:color="@color/bonne_sante_color"/>
    <!-- Santé moyenne -->
    <item android:state_checked="true" android:color="@color/sante_moyenne_color"/>
    <!-- Mauvaise santé -->
    <item android:state_pressed="true" android:color="@color/mauvaise_sante_color"/>
    <!-- Grand danger -->
    <item android:state_enabled="true" android:color="@color/grand_danger_color"/>
    <!-- Par défaut -->
    <item android:color="@android:color/transparent"/>
</selector>
