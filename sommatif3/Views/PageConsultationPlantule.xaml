<Page x:Class="Canabis.Views.PageConsultationPlantule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Canabis.Views"
      mc:Ignorable="d"
      d:DesignHeight="577.541" d:DesignWidth="825.355"
      Title="PageConsultationPlantule">

    <Grid Background="#f0f0f0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre de la page -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Consultation Plantule" FontSize="28" FontWeight="Bold" Margin="10"/>

        <!-- Identifiant -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20,10">
            <Label Content="Identifiant:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="tbId" Width="250" Height="30" VerticalAlignment="Center" Margin="5" BorderBrush="#007ACC" BorderThickness="1"/>
        </StackPanel>

        <!-- Recherche -->
        <Button Grid.Row="1" Grid.Column="1" Content="Recherche" Width="100" Height="30" Margin="10" VerticalAlignment="Center" Background="#007ACC" Foreground="White" BorderBrush="#007ACC" BorderThickness="1" Click="btRecherche_Click"/>

        <!-- État de santé -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="20,10">
            <Label Content="État de santé:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbEtatSante" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Date -->
        <StackPanel Grid.Row="3" Grid.Column="0" Margin="20,10">
            <Label Content="Date:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbDate" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Provenance -->
        <StackPanel Grid.Row="4" Grid.Column="0" Margin="20,10">
            <Label Content="Provenance:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbProvenance" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="5" Grid.Column="0" Margin="20,10">
            <Label Content="Description:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbDescription" Content="..." Width="250" Height="80" VerticalAlignment="Top" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Stade -->
        <StackPanel Grid.Row="6" Grid.Column="0" Margin="20,10">
            <Label Content="Stade:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbStade" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Entreposage -->
        <StackPanel Grid.Row="7" Grid.Column="0" Margin="20,10">
            <Label Content="Entreposage:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbEntreposage" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Quantité ajoutée -->
        <StackPanel Grid.Row="8" Grid.Column="0" Margin="20,10">
            <Label Content="Quantité ajoutée:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbQuantiteActif_inActif" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Item retiré de l’inventaire -->
        <StackPanel Grid.Row="9" Grid.Column="0" Margin="20,10">
            <Label Content="Item retiré de l’inventaire:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbItemRetireInventaire" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Note -->
        <StackPanel Grid.Row="10" Grid.Column="0" Margin="20,10">
            <Label Content="Note:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock x:Name="tbNote" Text="..." Width="250" Height="80" VerticalAlignment="Top" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>

        <!-- Responsable décontamination -->
        <StackPanel Grid.Row="11" Grid.Column="0" Margin="20,10">
            <Label Content="Responsable décontamination:" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbResponsable" Content="..." Width="250" Height="30" VerticalAlignment="Center" Margin="5" Background="#E0E0E0" Padding="5"/>
        </StackPanel>
    </Grid>
</Page>
